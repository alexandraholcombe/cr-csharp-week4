@{
    Layout="Shared/_Layout.cshtml";
}

<h1>@Model["venue"].GetName()</h1>
<span>
    <a href="/venues/@Model["venue"].GetId()/edit" class="btn">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    </a>
    <a href="/venues/@Model["venue"].GetId()/delete" class="btn">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
</span>

<ul>
    @foreach(var band in @Model["venueBands"])
    {
        <li><a href="/bands/@band.GetId()">@band.GetName()</a></li>
    }
</ul>

<form action="/venues/@Model["venue"].GetId()" method="post">
    <input type="hidden" name="venue" value="">
    <select name="band" class="form-control">
        @foreach (var band in @Model["bands"])
        {
            <option value="@band.GetId()">@band.GetName()</option>
        }
    </select>
    <button type="submit" name="button">Add Band</button>
</form>

<p><a href="/bands">Back</a></p>
<p><a href="/">Home</a></p>
<p><a href="/venues">View All Venues</a></p>
