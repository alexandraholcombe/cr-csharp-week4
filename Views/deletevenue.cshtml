    Layout="Shared/_Layout.cshtml";
}

<h1>Delete @Model.GetName()</h1>

<h3>Are you sure you want to delete @Model.GetName()?</h3>

<form action="/venues/@Model.GetId()/delete" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn">Delete</button>
</form>

<p><a href="/venues/@Model.GetId()">Back to @Model.GetName()</a></p>
